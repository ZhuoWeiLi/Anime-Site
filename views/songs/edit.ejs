    <h1 class = 'text-center'><%= song.title %></h1>
    
    <form action = "../<%= song._id %>?_method=PUT" method = "POST">
        
        <div class="form-group">
            <input class="form-control" type="text" name="song[title]" value="<%= song.title %>">
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" name="song[link]" value="<%= song.link %>">
        </div>
        
        <div class="form-group">
            <button class="btn btn-lg btn-success btn-block">Submit!</button>
        </div>
        
    </form>

